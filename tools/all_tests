# Runs all the tests.

pushd "$(dirname $0)" >/dev/null && source common.sh && popd >/dev/null

$TOOLS_DIR/unit_tests -q && \
    $TOOLS_DIR/py3_unit_tests -q && \
    $TOOLS_DIR/server_tests -q && \
    $TOOLS_DIR/python3_compatibility_check && \
    $TOOLS_DIR/ui test && \
    echo "All tests passed."
