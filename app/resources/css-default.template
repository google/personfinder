  margin: 50px;
}

.import form {
  margin: 20px 0;
}

.import .stats {
  background: #f4f4f4;
  border: 1px solid #dadada;
  font-size: 12px;
  padding: 1em;
}

.import .stats .errors {
  color: red;
}

.import .stats .error {
  background: inherit;
  margin: 0.5em 0;
  padding: 0;
  border: none;
}

.import .stats .error .message {
  font-weight: bold;
}

#recaptcha_widget_div {
